<div class="auth-section">
  <h1>Login</h1>
  <p class="tagline">Access your Pandora’s Box account to manage your files securely.</p>

  <form action="/login" method="POST" class="card">
    <div class="field">
      <label class="mute">Email Address</label>
      <input class="input" type="email" name="email" placeholder="example@email.com" required />
    </div>

    <div class="field">
      <label class="mute">Password</label>
      <input class="input" type="password" name="password" placeholder="••••••••" required />
    </div>

    <div class="field row" style="justify-content: space-between; align-items:center;">
      <label class="mute">
        <input type="checkbox" name="remember"> Remember me
      </label>
      <a href="/forgot-password" class="sign-up">Forgot Password?</a>
    </div>

    <div class="row" style="margin-top:16px; justify-content:center;">
      <button class="btn btn-primary" type="submit"><i class="fa-solid fa-right-to-bracket"></i> Login</button>
      <a class="btn" href="/register"><i class="fa-solid fa-user-plus"></i> Sign Up</a>
    </div>
  </form>
</div>
